{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Per Ankh",
  "version": "0.1.0",
  "identifier": "com.becked.per-ankh",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "",
        "width": 1280,
        "height": 800,
        "minWidth": 1024,
        "minHeight": 600,
        "titleBarStyle": "Overlay",
        "backgroundColor": "#211A12"
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Main application permissions",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "dialog:default",
            "dialog:allow-confirm",
            "dialog:allow-message",
            "core:window:allow-start-dragging"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "signingIdentity": null,
      "entitlements": null
    }
  }
}
